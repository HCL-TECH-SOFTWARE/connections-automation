image:
  repository:               {{ __docker_registry_url }}

clusterName:                {{ __opensearch_cluster_name }}
nodeGroup:                  "client"
masterService:              "{{ __opensearch_cluster_name }}-master"
pemkeyPass:                 {{ __opensearch_ca_password }}
imagePullSecrets:
{% if __credentials_name != "" %}
  - name: {{ __credentials_name }}
{% else %}
  {}
{% endif %}

roles:
  - remote_cluster_client

resources:
  limits:
    cpu:                    "2"
    memory:                 "2048Mi"
  requests:
    cpu:                    "0.1"
    memory:                 "1536Mi"

replicas:                   {{ __opensearch_replica_count }}
